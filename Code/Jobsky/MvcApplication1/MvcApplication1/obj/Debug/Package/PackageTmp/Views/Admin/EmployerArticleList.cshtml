@{
    ViewBag.Title = "已审核雇主文章列表";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style type="text/css">
    #body {
        background-color: #e7f2f8;
    }

    table {
        width: 100%;
        text-align: center;
        border: 1px solid #A7C5E2;
        border-collapse: collapse;
        background-color: #ffffff;
    }

    th {
        color: rgb(219,80,121);
        text-align: center;
        background-color: #F2F2F2;
    }

    tr {
        border-bottom: 1px dashed #A7C5E2;
    }

    th, td {
        padding: 8px;
    }

        td a {
            font-size: 1em;
            padding: 5px 5px;
            text-transform: uppercase;
            color: #ffffff;
            /*-webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;*/
            border-radius: 2px;
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
            -o-border-radius: 2px;
            text-decoration: none;
            color: White;
            background-color: #A0D468;
        }

            td a:hover {
                background-color: #87B753;
            }

    h2 {
        text-align: center;
        color: rgb(219,80,121);
    }
    /*分页样式*/
    .pagination {
        display: inline-block;
        padding-left: 0;
        margin: 20px 0;
        border-radius: 4px;
        font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        font-size: 14px;
    }

        .pagination li {
            display: inline;
        }

            .pagination li a {
                margin-right: 5px;
                border-radius: 2px;
                background: #fff;
                color: #333;
                border-color: #ccc;
                padding: 6px 15px;
                position: relative;
                float: left;
                border: 1px solid #ddd;
                text-decoration: none;
            }

                .pagination .active a, .pagination li a:hover, .pagination li a:focus {
                    color: #fff;
                    background: #fb9400;
                    border-color: #fb9400;
                }

                .pagination li a .arrow {
                    display: inline-block;
                    overflow: hidden;
                    border-left: 5px dashed transparent;
                    border-bottom: 5px dashed transparent;
                    border-right: 5px dashed transparent;
                    border-top: 5px solid #fff;
                    vertical-align: middle;
                }

                .pagination li a .arrow2 {
                    margin: 3px 8px 5px 0;
                    border-left: 5px dashed transparent;
                    border-bottom: 5px dashed transparent;
                    border-top: 5px dashed transparent;
                    border-right: 5px solid #ccc;
                }

                .pagination li a .arrow3 {
                    margin: 3px 0 5px 8px;
                    border-top: 5px dashed transparent;
                    border-bottom: 5px dashed transparent;
                    border-right: 5px dashed transparent;
                    border-left: 5px solid #ccc;
                }

        .pagination > .disabled > span,
        .pagination > .disabled > span:hover,
        .pagination > .disabled > span:focus,
        .pagination > .disabled > a,
        .pagination > .disabled > a:hover,
        .pagination > .disabled > a:focus {
            color: #999;
            background-color: #fff;
            border-color: #ddd;
            cursor: not-allowed;
        }
</style>

<h2>已审核雇主文章列表</h2>
<form action="~/Admin/EmployerArticleList" id="global_search_form" method="get" class="pull-left col-xs-6 col-sm-3" style="margin-bottom:5px;">
    <div class="input-group no-margin">
        @{
            if (@ViewBag.key != "")
            {
                <input type="text" name="key" value=@ViewBag.key class="form-control no-padding-hr" style="border-radius: 0;" />
            }
            else
            {
                <input type="text" name="key" placeholder="请输入待搜索文章标题..." class="form-control no-padding-hr" style="border-radius: 0;" />
            }
}
        @*<input type="text" name="key" placeholder="Search..." class="form-control no-padding-hr" style="border-radius: 0;" />*@
        <span id="global_search_btns" onclick="$('#global_search_form').submit();" class="input-group-addon" style="background-color: #e8e8e8; cursor: pointer;border-radius: 0;"><i class="glyphicon glyphicon-search jobsky-glyphicon-search"></i></span>
    </div>
</form>

<table>
    <tr>
        <th>
            单位名称
        </th>
        <th>
            标题
        </th>
        <th>
            文章类型
        </th>
        <th>
            操作
        </th>
    </tr>
    <tbody id="postback-content-table"></tbody>
</table>
<ul id="pagination-pages" class="pagination-sm"></ul>

<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">错误：</h4>
            </div>
            <div class="modal-body">
                <p>数据加载失败，请重新尝试。</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@section Scripts {
    <script type="text/javascript" src="~/Scripts/Article/jqPaginator.js"></script>
    <script src="~/Content/bootstrap/bootstrapPagination/jquery.twbsPagination.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myModal').modal({
                keyboard: false,
                show: false
            });

            $('#pagination-pages').twbsPagination({
                startPage: @ViewBag.pageindex,
                totalPages: @ViewBag.Count,
                visiblePages: 10,
                first: "首页",
                last: "尾页",
                prev: "<<",
                next: ">>",
                version: '1.0',
                onPageClick: function (event, page) {
                    $.ajax({
                        type: "post",
                        dataType: "html",
                        url: "@Url.Action("PartialEmployerArticleListByKey", "Admin")",
                        data: {"key":"@ViewBag.key","isAudit":"@ViewBag.isAudit", "pageindex": parseInt(page),"pagesize": @ViewBag.pagesize},
                        success: function (result) {
                            $("#postback-content-table").html(result);
                        },
                        error: function () {
                            $('#myModal').modal('show');
                        }
                    });
                }
            });
        });
    </script>
}

