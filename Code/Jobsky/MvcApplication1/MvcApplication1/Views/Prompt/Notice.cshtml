@model MvcApplication1.Models.Notice

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/ArticleLayout.cshtml";@*指定模板页*@
}

<div>
    <dl>
        <dt>@Html.DisplayFor(model => model.Title)</dt>
        <dd>@Html.Raw(@Html.DisplayFor(model => model.Details))</dd>
        @if (Model.DwellTime >= 0)
        {
            <dd>系统将在 <span id="time">@Model.DwellTime </span>秒后跳转。如未自动跳转请点击<a href="@Model.NavigationUrl">@Model.NavigationName</a>。</dd>            
        }
    </dl>
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jquery");
}
<script type="text/javascript">
    window.onload = function(){
        function Jump(time) {
            window.setTimeout(function () {
                time--;
                $("#time").text(time);
                if (time > 0) Jump(time);
                else location.href = "@Model.NavigationUrl";
            }, 1000);
        }
        Jump(@Model.DwellTime);
    }    
</script>

